---
import "$lib/styles/app.css";
import { Image } from "astro:assets";
import dashboardImage from "$lib/images/gc-dashboard.jpg";
import { Input } from "$lib/components/ui/input";
import { Button } from "$lib/components/ui/button";
import { Badge } from "$lib/components/ui/badge";
import { Rocket } from "lucide-svelte";
import Layout from "$lib/layouts/Layout.astro";
---

<Layout title="Game Chronicle">
  <main class="h-full relative bg-gradient-to-l from-background to-[#151221]">
    <ul
      class="absolute shapes top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
    >
      <li
        class="absolute block bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
      <li
        class="absolute block w-5 h-5 bg-white/5 animate-[shapes_25s_linear_infinite] -bottom-36"
      >
      </li>
    </ul>
    <div
      class="flex-col pt-16 lg:flex-row flex container items-center h-full gap-32"
    >
      <div class="flex flex-col lg:flex-grow">
        <h1
          class="text-3xl lg:text-4xl leading-tight mb-4 font-heading font-bold"
        >
          Record your journey
        </h1>
        <p class="text-lg lg:text-xl mb-8">
          Game Chronicle is an application for users to keep track of their
          gaming journey.
        </p>
        <form
          action="https://gmail.us17.list-manage.com/subscribe/post"
          class="flex gap-2 mb-4"
        >
          <input type="hidden" name="u" value="192cefd7630b0baf222aeaaf2" />
          <input type="hidden" name="id" value="e9549b503f" />
          <Input
            name="MERGE0"
            id="MERGE0"
            type="email"
            placeholder="Enter your awesome email"
            class="max-w-xs"
          />
          <Button type="submit">Get updates</Button>
        </form>
        <Badge class="w-fit flex gap-1 items-center hover:bg-primary">
          <Rocket />
          <p>Coming soon</p>
        </Badge>
      </div>
      <div class="relative lg:grow">
        <Image
          src={dashboardImage}
          alt=""
          class="aspect-video rounded-lg"
          loading="eager"
        />
      </div>
    </div>
  </main>
</Layout>

<style>
  .shapes li:nth-child(1) {
    left: 25%;
    width: 80px;
    height: 80px;
    animation-delay: 0s;
  }

